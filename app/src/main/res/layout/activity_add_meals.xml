<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cut_shape_background"
    tools:context=".AddMeals">


    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="264dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="13dp"
        android:fontFamily="@font/asap_bold"
        android:text="Add Meals"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textT1"
        android:layout_width="144dp"
        android:layout_height="23dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="193dp"
        android:fontFamily="@font/asap_bold"
        android:text="Category"
        android:textColor="@color/grey4dark"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enterCategory"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="16dp"
        android:background="@color/blue2"
        android:ems="10"
        android:fontFamily="@font/quicksand"
        android:hint="Enter Category"
        android:inputType="text"
        android:textColor="@color/grey4dark"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enterMealName"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="16dp"
        android:background="@color/blue2"
        android:ems="10"
        android:fontFamily="@font/quicksand"
        android:hint="Enter Meal Name"
        android:inputType="textPersonName"
        android:textColor="@color/grey4dark"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="154dp"
        android:fontFamily="@font/asap_bold"
        android:text="Meal Name"
        android:textColor="@color/grey4dark"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="232dp"
        android:fontFamily="@font/asap_bold"
        android:text="Calorie Amount"
        android:textColor="@color/grey4dark"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enterCalorieAmount"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="255dp"
        android:layout_marginEnd="16dp"
        android:background="@color/blue2"
        android:ems="10"
        android:fontFamily="@font/quicksand"
        android:hint="Enter Calorie Amount"
        android:inputType="textPersonName"
        android:textColor="@color/grey4dark"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="310dp"
        android:fontFamily="@font/asap_bold"
        android:text="Cooking Time"
        android:textColor="@color/grey4dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/enterCookingTime"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="328dp"
        android:layout_marginEnd="16dp"
        android:background="@color/blue2"
        android:ems="10"
        android:fontFamily="@font/quicksand"
        android:hint="Enter Cooking Time"
        android:inputType="textPersonName"
        android:textColor="@color/grey4dark"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="388dp"
        android:fontFamily="@font/asap_bold"
        android:text="Ingredients"
        android:textColor="@color/grey4dark"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enterIngredients"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="408dp"
        android:layout_marginEnd="16dp"
        android:background="@color/blue2"
        android:ems="10"
        android:fontFamily="@font/quicksand"
        android:hint="Enter Ingredients"
        android:inputType="textPersonName"
        android:textColor="@color/grey4dark"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:background="@color/black"
        android:fontFamily="@font/asap_bold"
        android:text="Save"
        app:cornerRadius="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterIngredients" />

    <Button
        android:id="@+id/btnView"
        android:layout_width="134dp"
        android:layout_height="44dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/asap_bold"
        android:text="View >>"
        android:textColor="@color/grey3"
        app:cornerRadius="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/btnAdd"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="144dp"
        android:background="#000000"
        android:text="+"
        android:textColor="#FFFFFF"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSave"
        app:layout_constraintHorizontal_bias="0.369"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>