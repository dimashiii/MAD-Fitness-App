<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewplan"
        android:layout_width="370dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
>

        <ImageView
            android:id="@+id/monthlyPlan"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/plan1" />

        <TextView
            android:id="@+id/txtPlanName"
            android:layout_width="123dp"
            android:layout_height="30dp"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/asap_bold"
            android:paddingLeft="5dp"
            android:text="Monthly Plan"
            android:textColor="@color/green2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtPlanDuration"
            android:layout_width="123dp"
            android:layout_height="23dp"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/asap_bold"
            android:paddingLeft="5dp"
            android:text="30 Days (Duration)"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/editbtn"
            android:layout_width="65dp"
            android:layout_height="36dp"
            android:layout_marginStart="225dp"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/green4main"
            android:fontFamily="@font/asap_bold"
            android:text="Edit"
            android:textColor="@color/white"
            android:textSize="8sp"
            app:backgroundTint="#FFFFFF" />

        <Button
            android:id="@+id/deletebtn"
            android:layout_width="65dp"
            android:layout_height="36dp"
            android:layout_marginStart="290dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/asap_bold"
            android:text="Delete"
            android:textColor="@color/white"
            android:textSize="8sp"
            app:backgroundTint="@color/green4main" />

    </androidx.cardview.widget.CardView>


</RelativeLayout>